<!DOCTYPE html>
<html lang="en">
  <head>
    <script type="module"
      src="https://www.unpkg.com/@google/model-viewer/dist/model-viewer.min.js">
    </script>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
      body {
        margin: 0;
        overflow: hidden;
        background: #ffffff;
      }
      model-viewer {
        width: 100vw;
        height: 100vh;
      }
    </style>
  </head>

  <body>
    <model-viewer 
      src="NOMBRE_DEL_MODELO.glb"
      ar
      ar-modes="scene-viewer quick-look webxr"
      camera-controls
      auto-rotate
      environment-image="neutral">
    </model-viewer>
  </body>
</html>
